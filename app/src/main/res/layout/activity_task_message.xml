<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/layout_mess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/bg_task_message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/num"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/client_name"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                 <TextView
                    android:id="@+id/textView_idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/client_idcard"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/client_phone"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_tybe1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/b_tybe"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_bank1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/bank"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/client_address"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/time"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_arrtime"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/arrtime"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_cphone"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/cour_phone"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_msg_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/hint_mess"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/remark"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_cancle_order"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/cancle_ordercode"
                    android:textColor="#333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b2b2b2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_num_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_name_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />
                
                <TextView
                    android:id="@+id/textView_idcard_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_client_phone_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/textView_phone_mess"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_button_search"
                        android:src="@drawable/dianhua"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_tybe_mess"
                        android:layout_width="220dp"
                        android:layout_height="36dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/textView_phone_mess_2"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_button_search"
                        android:src="@drawable/ywu"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_bank_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="36dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_address"
                        android:layout_width="220dp"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/button_open_navi"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_button_search"
                        android:src="@drawable/ttt"
                        android:text="@string/open_navi"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_time_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_arrtime_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="36dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="36dp" >

                    <TextView
                        android:id="@+id/textView_cphone_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/textView_phone_boss_mess"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_button_search"
                        android:src="@drawable/dianhua" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_hint_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="36dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <EditText
                    android:id="@+id/textView_remark_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="36dp"
                    android:gravity="center_vertical"
                    android:hint="输入反馈信息"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="32dp" >

                    <TextView
                        android:id="@+id/textView_cancle_hint_mess"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:hint="取消订单需要说明原因"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/button_cancle"
                        android:layout_width="56dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/bg_button_search"
                        android:onClick="onCancle"
                        android:src="@drawable/quxiao"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_mess"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:gravity="right" >

                <ProgressBar
                    android:id="@+id/progressBar1"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@anim/person_anim"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="right" >

                <ProgressBar
                    android:id="@+id/progressBar2"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@anim/person_anim"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="right" >

                <ProgressBar
                    android:id="@+id/progressBar3"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@anim/person_anim"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="right" >

                <ProgressBar
                    android:id="@+id/progressBar4"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@anim/person_anim"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:gravity="right" >

                <ProgressBar
                    android:id="@+id/progressBar5"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:indeterminateDrawable="@anim/person_anim"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/one" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp" >

            <TextView
                android:id="@+id/textView_progress_yuyue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_progress_chufa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_progress_daoda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_progress_zhixing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_progress_wancheng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_message"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_menu_layout"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_btn_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_order_message"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/bg_menu_task" />

            <TextView
                android:id="@+id/tv_order_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_task_mess_manager"
                android:textColor="@drawable/ic_tab_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_message_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_order_message_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_menu_mine" />

            <TextView
                android:id="@+id/tv_order_message_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_mine_beizhu"
                android:textColor="@drawable/ic_tab_text_color"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/button_message_firm"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:src="@drawable/bg_feiji" />

    <TextView
        android:id="@+id/textview_point_feiji_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textColor="#333333"
        android:textSize="14sp" />

</RelativeLayout>