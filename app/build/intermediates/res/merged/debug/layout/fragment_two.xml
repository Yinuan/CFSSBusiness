<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical" >

    <include layout="@layout/bg_title_mine_layout" />

    <!-- 头像显示区域 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="3"
        android:gravity="center" >

        <com.yd.cfssbusinessdemo.weight.CircleImageView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:id="@+id/touxiang"
            android:src="@drawable/touxiang_little"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <!-- 个人信息 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b2b2b2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="个人资料" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b2b2b2" />

        <!-- 表格 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 左列 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="姓    名：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="性    别：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="电    话：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="身份证：" />
            </LinearLayout>
            <!-- 隔离线 -->

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#b2b2b2" />

            <!-- 右列 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_personal_name"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="姓名：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_personal_sex"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="性别：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_personal_phone"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="电话：" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b2b2b2" />

                <TextView
                    android:id="@+id/textView_personal_id_card"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="身份证：" />
            </LinearLayout>
        </LinearLayout>
        <!-- 修改密码 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b2b2b2" />

        <RelativeLayout
            android:id="@+id/relativeLayout_pass"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/alter_pass"
                android:textColor="#333333"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_wode_2" >
            </ImageView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b2b2b2" />
    </LinearLayout>

    <!-- 退出登录 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/button_exit"
            android:layout_width="400dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_button_search"
            android:text="@string/exit_login"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>